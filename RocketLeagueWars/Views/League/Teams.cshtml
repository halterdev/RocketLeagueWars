@{
    ViewBag.Title = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<RocketLeagueWars.Models.Team>

<table style="margin-left: auto; margin-right: auto; margin-top: 5%;">
    <tr>
        <th>
            Teams
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>    
                <a href="@Url.Action("Index", 
                     new 
                         { 
                           controller = "Team", 
                           id = item.TeamID
                         })">@item.TeamName</a>
            </td>
        </tr>
    }
</table>
