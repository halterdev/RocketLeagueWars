@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<RocketLeagueWars.Models.League>

<table style="margin-left: auto; margin-right: auto; margin-top: 5%;">
    <tr>
        <th>
            Name
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>    
                <a href="@Url.Action("League", 
                     new 
                         { 
                           controller = "League", 
                           id = item.LeagueID
                         })">@item.LeagueName</a>
            </td>
        </tr>
    }
</table>